<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tripplanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MaterialComponentsLight">
        <activity android:name=".DetailListActivity" android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TripReview"
            android:label="Review Trip" />
        <activity
            android:name=".HelpActivity"
            android:label="Help" />
        <activity
            android:name=".StartTripActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TripSummaryActivity" />
    </application>

</manifest>